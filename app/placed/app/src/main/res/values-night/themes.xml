<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Placed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorDarkModeDark</item>
        <item name="colorOnPrimary">@color/backgroundDarkMode</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColorLight</item>
        <item name="colorOnSecondary">@color/backgroundDarkMode</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/primaryTextColorDarkMode</item>
    </style>
    <style name="Theme.Placed.Header">
        <item name="android:background">@color/primaryColorDark</item>
        <item name="android:textColor">@color/primaryTextColorDarkMode</item>
    </style>
</resources>